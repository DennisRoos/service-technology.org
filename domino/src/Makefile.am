domino_SOURCES = main.cc \
				graph-syntax.yy graph-lexic.ll \
                verbose.cc verbose.h \
                cmdline.c cmdline.h \
                Output.cc Output.h \
				util.h \
				types.h \
				Results.cc Results.h \
				Tarjan.cc Tarjan.h \
				Fragmentation.cc Fragmentation.h 
