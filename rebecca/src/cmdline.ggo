package "Rebecca"
version "1.0-unreleased"
purpose "Rebecca -- choreography realization"
usage ""
description "Usage: "

args "--long-help --include-getopt --show-required --unamed-opts=FILE"

section "Input/Output"

option "prefix" p
  "Specifies output prefix for output automata files. If not given the default value is the <input filename> + '.peerX.sa' where X is the name of the peer specified within the choreography."
  string
  typestr="PREFIX"
  optional
  
option "Chor" C
  "Writes the input choreography to stdout after the resolutiion of dependencies."
  flag off
  
option "chor" c
  "Writes the input choreography to a file after the resolution of dependencies."
  string
  typestr="FILE"
  optional
  
option "quiet" q
  "If selected, no automaton file will be written to file system."
  flag off

section "Debug"

option "verbose" v
  "Verbose output"
  flag off

text "\nReport bugs to rebecca@service-technology.org\nRebecca's home page: http://service-technology.org/rebecca"
