AT_CHECK([cp TESTFILES/NET .])
AT_CHECK([LISA NET -c],0,ignore,stderr)
AT_CHECK([GREP -q "1 1 0 0 -1" stderr])
AT_KEYWORDS(algorithms)
AT_CLEANUP

