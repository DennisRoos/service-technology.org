SORT pid0 = [ 0 , 4 ] ;
     pid = [ 1 , 4 ] ;
    pidarray  = RECORD
			index : pid ;
 			value : BOOLEAN ;
		END ;

FUNCTION cell ( a : pid ; b : BOOLEAN ) : pidarray
VAR r : pidarray ;
BEGIN
	r . index = a ;
	r . value = b ;
	RETURN r
END

FUNCTION allpid () : pid
VAR i : pid ;
BEGIN
	FOR ALL i DO RETURN i END
END

FUNCTION emptypid() : pid0 
BEGIN
RETURN 0
END

FUNCTION tt() : BOOLEAN
BEGIN
RETURN TRUE 
END

FUNCTION ff() : BOOLEAN
BEGIN
RETURN FALSE
END

