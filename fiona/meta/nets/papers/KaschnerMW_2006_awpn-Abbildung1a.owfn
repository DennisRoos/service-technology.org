{ 
DESCRIPTION: Das oWFN T eines Kunden, der Tee bestellt
}

PLACE
  INTERNAL
    r0,r1,r2,r3;
  INPUT
    Euro',B;
  OUTPUT
    Euro,T;
  
INITIALMARKING
  r0;

FINALCONDITION
  (r3=1 AND ALL_OTHER_PLACES_EMPTY);

TRANSITION sendEuro
  CONSUME r0;
  PRODUCE Euro,r1;

TRANSITION sendTeaButton
  CONSUME r1;
  PRODUCE T,r2;

TRANSITION getEuro'
  CONSUME r2,Euro';
  PRODUCE r3;

TRANSITION getBeverage
  CONSUME r2,B;
  PRODUCE r3;

