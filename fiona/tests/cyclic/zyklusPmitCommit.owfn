{ artifical net where R decides whether to enter or exit a cycle }

PLACE
INTERNAL
  p0,
  p1,
  p2,
  p3;

INPUT
  b;

OUTPUT
  a,
  c;

INITIALMARKING
  p0;

FINALCONDITION
  (p0 = 0 AND p1 = 0 AND p2 = 0 AND p3 = 1 AND a = 0 AND b = 0 AND c = 0);

TRANSITION t1    { !a }
CONSUME
  p0;
PRODUCE
  p1,
  a;

TRANSITION t2    { ?b }
CONSUME
  p1,
  b;
PRODUCE
  p2;

TRANSITION t3    { !b }
CONSUME
  p2;
PRODUCE
  p0;

TRANSITION t4    { !c }
CONSUME
  p0;
PRODUCE
  p3,
  c;

{ end of file }
