############################################################################
AT_BANNER([Errors])
############################################################################

AT_SETUP([Input file not found])
AT_CHECK([BSD_ foo.owfn --lola=],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#01\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Syntax error])
AT_CHECK([cp TESTFILES/error02.* .])
AT_CHECK([BSD_ error02.owfn --lola=],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#02\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Un-normal input net])
AT_CHECK([cp TESTFILES/error03.* .])
AT_CHECK([BSD_ error03.owfn --lola=],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#03\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Multiple options])
AT_CHECK([cp TESTFILES/error02* .])
AT_CHECK([BSD_ --uBSD --check error02.owfn --lola=],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#04\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([bound not positive])
AT_CHECK([cp TESTFILES/myCoffee.owfn .])
AT_CHECK([BSD_ myCoffee.owfn --bound=-1],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#05\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Multiple file input (check theorem)])
AT_CHECK([cp TESTFILES/error04* .])
AT_CHECK([BSD_ --check error04-1.owfn error04-2.owfn error04-2.owfn --lola=],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#06\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Multiple file input (other cases)])
AT_CHECK([cp TESTFILES/error04* .])
AT_CHECK([BSD_ error04-1.owfn error04-2.owfn --lola=],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#07\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP


AT_SETUP([Error building the reachability graph])
AT_CHECK([cp TESTFILES/error06.* .])
AT_CHECK([BSD_ error06.owfn --lola=foo],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#09\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Invalid command line parameter])
AT_CHECK([BSD_ --foo],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#10\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Cannot write to file])
AT_CHECK_LOLA
AT_CHECK([cp TESTFILES/myCoffee.owfn .])
AT_CHECK([touch BSD_1(myCoffee).dot])
AT_CHECK([chmod a-w BSD_1(myCoffee).dot])
AT_CHECK([BSD_ myCoffee.owfn --bound=1 --verbose],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#13\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Cannot create tempfile])
AT_CHECK_LOLA
AT_CHECK([cp TESTFILES/myCoffee.owfn .])
AT_CHECK([touch foo])
AT_CHECK([chmod a-w foo])
AT_CHECK([BSD_ myCoffee.owfn --verbose --tmpfile=foo],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#14\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Missing configuration file])
AT_CHECK([BSD_ --config=foo],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#15\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP

AT_SETUP([Invalid configuration file])
AT_DATA([BSD.conf], [invalid="PARAMETER"
])
AT_CHECK([BSD_ -v],1,ignore,stderr)
AT_CHECK([GREP -q "aborting \[[#15\]]" stderr])
AT_KEYWORDS(error)
AT_CLEANUP
