AT_KEYWORDS(basic)
AT_CLEANUP

AT_SETUP([Version output])
AT_CHECK([LINDA --version],0,ignore)
AT_KEYWORDS(basic)
AT_CLEANUP

AT_SETUP([Parsing a net.])
AT_CHECK([cp TESTFILES/accrej.owfn .])
AT_CHECK([LINDA -v accrej.owfn],0,ignore,stderr)
AT_CHECK([GREP -q "read net |P|= 14  |P_in|= 3  |P_out|= 5  |T|= 6  |F|= 20" stderr])
AT_KEYWORDS(basic)
AT_CLEANUP

AT_SETUP([Final Condition to Final Markings.])
AT_CHECK([cp TESTFILES/accrej.owfn .])
AT_CHECK([LINDA -v accrej.owfn],0,ignore,stderr)
AT_CHECK([GREP -q "p0=0; p1=0; p2=0; w0=1; wacc=0; wrej=0;" stderr])
AT_CHECK([GREP -q "p0=0; p1=0; p2=0; w0=0; wacc=1; wrej=0;" stderr])
AT_CHECK([GREP -q "p0=0; p1=0; p2=0; w0=0; wacc=0; wrej=1;" stderr])
AT_CHECK([GREP -q "Number of lp systems: 3" stderr])
AT_KEYWORDS(basic)
AT_CLEANUP

